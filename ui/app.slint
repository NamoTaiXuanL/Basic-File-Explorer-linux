import { VerticalBox, HorizontalBox, Button, LineEdit } from "std-widgets.slint";

export component MainWindow inherits Window {
    callback path-changed(string);
    callback navigate-up();
    
    preferred-width: 800px;
    preferred-height: 600px;
    title: "文件资源管理器";
    
    property<string> current-path: "C:\\";
    
    VerticalBox {
        HorizontalBox {
            spacing: 8px;
            padding: 12px;
            
            Button {
                text: "←";
                width: 32px;
                height: 32px;
            }
            
            Button {
                text: "→";
                width: 32px;
                height: 32px;
            }
            
            Button {
                text: "↑";
                width: 32px;
                height: 32px;
                clicked => { navigate-up(); }
            }
            
            LineEdit {
                text: current-path;
                placeholder-text: "输入路径...";
                width: 400px;
                edited => { path-changed(self.text); }
            }
            
            Button {
                text: "刷新";
                width: 60px;
                clicked => { path-changed(current-path); }
            }
        }
        
        Text {
            text: "文件列表区域 - 开发中";
        }
    }
}